{
    "name": "agungsugiarto/codeigniter4-cors",
    "description": "Send CORS Headers in a CodeIgniter 4 application.",
    "keywords": ["codeigniter4", "cors", "codeigniter4-cors", "api", "ajax", "request"],
    "license": "MIT",
    "authors": [
        {
            "name": "Agung Sugiarto",
            "email": "me.agungsugiarto@tgmail.com",
            "homepage": "https://agungsugiarto.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Fluent\\Cors\\": "src"
        }
    },
    "require-dev": {
        "codeigniter4/framework": "^4.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Fluent\\Cors\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always"
    }
}
